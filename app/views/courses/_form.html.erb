    </div>

    <div class="field">
        <%= f.label :prerequisites %>
        <%= f.text_area :prerequisites %>
    </div>

    <div class="field">
        <%= f.label :content %>
        <%= f.text_area :content %>
    </div>

    <div class="field">
        <%= f.label :place %>
        <%= f.text_field :place %>
    </div>

    <div class="field">
        <%= f.label :start %>
        <%= f.date_select :start %>
    </div>

    <div class="field">
        <%= f.label :time %>
        <%= f.text_field :time %>
    </div>

    <div class="field">
        <%= f.label :confirmed %>
        <%= f.check_box :confirmed %>
    </div>

    <div class="field">
        <%= f.label :category_id %>
        <%= f.text_field :category_id %>
    </div>

    <div class="field">
        <%= f.label :instructor_id %>
